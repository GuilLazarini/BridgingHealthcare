<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.bridginghealthcare.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="89dp"
        android:text="Bridging Healthcare"
        android:textColor="@color/grey"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginStart="66dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="69dp"
        android:text="Versão 1.0.1"
        android:textAlignment="center"
        android:textColor="@color/grey" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="45dp"
        android:layout_height="38dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="-29dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/ic_action_email" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="13dp"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@+id/imageView4"
        android:text="@string/EmailDev"
        android:textColor="@color/grey" />

    <Button
        android:id="@+id/btnOpen"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_below="@+id/btnPrivacidade"
        android:layout_alignStart="@+id/btnPrivacidade"
        android:layout_alignEnd="@+id/btnPrivacidade"
        android:layout_marginStart="0dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/buttonshape"
        android:text="@string/btnOpenSource"
        android:textColor="@color/grey" />

    <Button
        android:id="@+id/btnPrivacidade"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginStart="40dp"
        android:layout_marginTop="302dp"
        android:layout_marginEnd="37dp"
        android:background="@drawable/buttonshape"
        android:text="Política de privacidade"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="253dp"
        android:textColor="@color/grey"
        android:text="Dev: Guilherme Lazarini Lopes" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="281dp"
        android:layout_marginEnd="75dp"
        android:text="O App tem como objetivo criar uma ponte entre o sistema de saude publico e os cidadoes facilitando assim o alocamento de verba publica para determinadas areas expecificas"
        android:textColor="@color/grey" />
</RelativeLayout>